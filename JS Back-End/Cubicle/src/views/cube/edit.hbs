<main>
    <h1>Edit Cube</h1>
    <div class="form">
        <form  method="POST">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" value="{{cube.name}}">
            <label for="description">Description</label>
            <textarea id="description" name="description">{{cube.description}}</textarea>
            <label for="image">ImageUrl</label>
            <input type="text" id="image" name="imageUrl" value="{{cube.imageUrl}}">
            <img id="cubeImage"src="{{#if cube.imageUrl}}{{cube.imageUrl}}{{else}}/images/no-image.jpg{{/if}}" alt="{{cube.name}}">
            <label for="difficulty">Difficulty</label>
            <select id="difficulty" name="difficultyLevel" />
           {{#each options}}
             <option value="{{value}}" {{#if selected}}selected {{/if}}>{{title}}</option>
           {{/each}}
            </select>
            <input type="submit" value="Edit">
        </form>
    </div>
</main>

<script>
    const imageUrlInput = document.getElementById('image');
    const cubeImage = document.getElementById('cubeImage');

    imageUrlInput.addEventListener('input', function () {
        const imageUrl = imageUrlInput.value;
        cubeImage.src = imageUrl;
    });
</script>