<main>

    <!-- In case of error, display the following div-->

    {{#if errors}}
    {{#each errors}}
    <div class="error-box">
        <p>{{this}}</p>
    </div>
    {{/each}}
    {{/if}}

    <!-- Details Page - Auction owner -->
    <section id="catalog-section">

        <h1 class="item">
            {{auction.title}}
            <div class="f-right">
                <a class="action pad-small f-left" href="/auctions/{{auction._id}}/edit">Edit</a>
                <a class="action pad-small f-left" href="/auctions/{{auction._id}}/delete">Delete</a>
            </div>
        </h1>
        <div class="item padded">

            <div class="layout right large">

                <div class="col">
                    <img src="{{auction.image}}" class="img-large">
                </div>

                <div class="content pad-med">

                    <p>In category: <strong>{{auction.category}}</strong></p>
                    <p>{{auction.description}}</p>

                    <div class="align-center">
                        <div>
                            Current price: $<strong>{{auction.price}}</strong>
                        </div>

                        <div>
                            {{#if auction.bidder}}
                            <!-- If there is a bidder -->
                            Bid by <strong>John Maclane</strong>

                            <!-- # Bonus: If there is a bidder --><!--

                                    <a class="action pad-med cta" href="#">Close Auction</a>
                                    
                                    # End of Bonus -->

                            <!-- If there are no bids -->
                            {{else}}
                            No bids
                            {{/if}}
                        </div>
                    </div>

                </div>
            </div>

            <footer>Listed by {{author}}</footer>
        </div>

    </section>

</main>