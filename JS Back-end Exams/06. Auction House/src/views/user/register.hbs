<main>

  <!-- In case of error, display the following div-->

  {{#if errors}}
  {{#each errors}}
  <div class="error-box">
    <p>{{this}}</p>
  </div>
  {{/each}}
  {{/if}}


  <!-- Register Page -->
  <section id="register-section" class="narrow">

    <h1 class="item">Register</h1>

    <div class="item padded align-center">

      <form class="aligned" method="POST">

        <label>
          <span>Email</span>
          <input type="text" name="email" id="email" value="{{userData.email}}">
        </label>
        <label>
          <span>First name</span>
          <input type="text" name="firstName" id="firstName" value="{{userData.firstName}}">
        </label>
        <label>
          <span>Last name</span>
          <input type="text" name="lastName" id="lastName" value="{{userData.lastName}}">
        </label>
        <label>
          <span>Password</span>
          <input type="password" name="password" id="password">
        </label>
        <label>
          <span>Repeat Password</span>
          <input type="password" name="repeatPassword" id="repeatPassword">
        </label>

        <div class="align-center">
          <input class="action" type="submit" value="Create Account">
        </div>

      </form>

    </div>

  </section>

</main>