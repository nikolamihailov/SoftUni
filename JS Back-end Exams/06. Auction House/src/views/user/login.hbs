<main>

  <!-- In case of error, display the following div-->

  {{#if errors}}
  {{#each errors}}
  <div class="error-box">
    <p>{{this}}</p>
  </div>
  {{/each}}
  {{/if}}

  <!-- Login Page -->
  <section id="login-section" class="narrow">

    <h1 class="item">Login</h1>

    <div class="item padded align-center">

      <form class="aligned" method="POST">

        <label>
          <span>Email</span>
          <input type="text" name="email" id="email" value="{{email}}">
        </label>
        <label>
          <span>Password</span>
          <input type="password" name="password" id="password">
        </label>
        <div class="align-center">
          <input class="action" type="submit" value="Sign In">
        </div>

      </form>

    </div>

  </section>

</main>