<main>
    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->

    {{#if errors}}
    <div class="errorContainer">
        {{#each errors}}
        <p>{{this}}</p>
        {{/each}}
    </div>
    {{/if}}
    <section id="edit-container">
        <div class="edit-container-info">
            <h1>Edit Announcement</h1>
            <form method="POST">
                <label>Name:</label>
                <input type="text" id="name" name="name" placeholder="Bitcoin" value="{{offer.name}}">
                <label>Image:</label>
                <input type="text" id="image" name="image" placeholder="http://..." value="{{offer.image}}">
                <label>Price:</label>
                <input type="number" id="price" name="price" placeholder="31,166.71" value="{{offer.price}}">
                <label>Description:</label>
                <textarea id="description" name="description"
                    placeholder="Introduce your coins...">{{offer.description}}</textarea>
                <label>Payment method:</label>
                <select id="payment" name="payment">
                    {{#each options}}
                    <option value="{{value}}" {{#if selected}}selected{{/if}}>{{title}}</option>
                    {{/each}}
                </select>
                <input type="submit" id="btn" value="TRADE"></input>
            </form>
        </div>
    </section>
</main>