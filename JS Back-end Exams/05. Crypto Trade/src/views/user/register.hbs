<main>
  <!-- In case of error, you should display div with class "errorContainer" -->
  <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->

  {{#if errors}}
    <div class="errorContainer">
      {{#each errors}}
        <p>{{this}}</p>
      {{/each}}
    </div>
  {{/if}}

  <div class="register-box">
    <h1>Register</h1>
    <h4>It's free and only take a minute</h4>
    <form method="POST">
      <label>Username</label>
      <input
        type="text"
        name="username"
        id="username"
        placeholder="Username.."
        value="{{userData.username}}"
      />
      <label>Email</label>
      <input
        type="text"
        name="email"
        id="email"
        placeholder="Email.."
        value="{{userData.email}}"
      />
      <label>Password</label>
      <input
        type="password"
        name="password"
        id="password"
        placeholder="Password.."
      />
      <label>Confirm Password</label>
      <input
        type="password"
        name="repeatPassword"
        id="repeatPassword"
        placeholder="Confirm Password.."
      />
      <input type="submit" value="Submit" />
    </form>
    <p>
      Already have an account?
      <a href="/users/login">Login here</a>
    </p>
  </div>
</main>