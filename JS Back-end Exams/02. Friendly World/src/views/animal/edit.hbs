<main class="edit">
  <!-- Edit Page (Only for logged-in users) -->
  <section id="create">
    <div class="form">
      <h2>Edit item</h2>
      <form class="create-form" method="POST">
        <input
          type="text"
          name="name"
          id="name"
          placeholder="Name"
          value="{{animal.name}}"
        />
        <input
          type="text"
          name="years"
          id="years"
          placeholder="Years"
          value="{{animal.years}}"
        />
        <input
          type="text"
          name="kind"
          id="kind"
          placeholder="Kind"
          value="{{animal.kind}}"
        />
        <input
          type="text"
          name="image"
          id="animal-img"
          placeholder="Image url"
          value="{{animal.image}}"
        />
          <img id="animalImage"src="{{#if animal.image}}{{animal.image}}{{else}}/images/no-image.jpg{{/if}}" alt="{{animal.name}}" style="width: 80px; height: 80px; margin-bottom:10px">
        <input
          type="text"
          name="need"
          id="needs-of"
          placeholder="Needs of"
          value="{{animal.need}}"
        />
        <input
          type="text"
          name="location"
          id="location"
          placeholder="Location"
          value="{{animal.location}}"
        />
        <textarea
          id="description"
          placeholder="Description..."
          name="description"
        >
          {{animal.description}}</textarea>

        <button type="submit">Edit</button>
      </form>
    </div>
  </section>
</main>

<script>
  const imageUrlInput = document.getElementById('animal-img');
  const animalImg = document.getElementById('animalImage');
  imageUrlInput.addEventListener('input', function () {
  const imageUrl = imageUrlInput.value;
   animalImg.src =imageUrl;   
   });
</script>