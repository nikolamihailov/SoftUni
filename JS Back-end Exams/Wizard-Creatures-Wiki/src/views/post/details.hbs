<main>
  <section id="details-page">
    <div class="main_card">
      <div class="card_left">
        <div class="card_datails">
          <h1>Name: {{post.name}}</h1>
          <h3>Created by an author: {{author}}</h3>
          <div class="card_character">
            <p class="card-species">Species:
              {{post.species}}</p>
            <p class="card-skin">Skin colour:
              {{post.skinColor}}</p>
            <p class="card-eye">Eye Colour:
              {{post.eyeColor}}</p>
          </div>

          <p class="disc">
            Description:
            {{post.description}}
          </p>

          {{#if isAuthenticated}}
            <!-- If there is no registered user, do not display buttons-->
            <div class="social-btn">
              {{#if isAuthor}}
                <!-- Only for registered user and author of the post -->
                <a
                  href="/posts/{{post._id}}/edit"
                  class="edit-btn"
                >Edit</a>
                <a
                  href="/posts/{{post._id}}/delete"
                  class="del-btn"
                >Delete</a>
              {{else}}
                <!-- logged in users, who have not yet voted-->
                {{#if canVote}}
                  <a
                    href="/posts/{{post._id}}/vote"
                    class="vote-up"
                  >Vote</a>
                {{else}}
                  <!-- logged in user who has already voted-->
                  <p class="thanks-for-vote">Thanks For
                    Voting</p>
                {{/if}}
              {{/if}}
            </div>
          {{/if}}
        </div>
      </div>
      <div class="card_right">
        <img src="{{post.image}}" alt="{{post.name}}" />
      </div>
    </div>
  </section>

  <section id="votes">
    <div class="vote-info">
      <div class="card_left">
        <div class="card_datails">
          <h1>Votes</h1>
          <div class="card_vote">
            <!-- Show the rating of votes, if there are no votes yet, the number must be 0. -->
            <p class="PV">Total rating of votes:
              {{votes}}</p>
          </div>
          <!-- If there are already people who have cast their vote for the post, separate their emails with a comma and a space ", " -->

          {{#if voters}}

            <p class="disc">People who voted for the post -
              {{voters}}</p>
          {{else}}

            <p class="disc">
              People who voted for the post - No one has
              voted yet.
            </p>

          {{/if}}

          <!-- If not display: -->
        </div>
      </div>
    </div>
  </section>
</main>