{{#if errors}}
  <div class="errorContainer">
    {{#each errors}}
      <p>{{this}}</p>
    {{/each}}
  </div>
{{/if}}

<section class="register-form-container">
  <form method="POST">
    <h3>Register</h3>
    <label>Email</label>
    <input
      type="email"
      name="email"
      class="box"
      id="email"
      value="{{userData.email}}"
    />
    <label>Username</label>
    <input
      type="text"
      name="username"
      class="box"
      id="username"
      value="{{userData.username}}"
    />
    <label>Password</label>
    <input
      type="password"
      name="password"
      class="box"
      id="password"
    />
    <label>Confirm Password</label>
    <input
      type="password"
      name="repeatPassword"
      class="box"
      id="repeatPassword"
    />
    <input type="submit" value="Register" class="btn" />
    <p>Have an account ?
      <a href="/users/login">Click here</a></p>
  </form>
</section>